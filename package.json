{
  "name": "klukies",
  "private": true,
  "sideEffects": false,
  "author": "Lukas Cornille <lukascornille@hotmail.com> (https://klukies.com)",
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:icons": "tsx ./scripts/build-icons.ts",
    "build:remix": "remix build --sourcemap",
    "build:server": "tsx ./scripts/build-server.ts",
    "predev": "npm run build:icons --silent",
    "dev": "remix dev -c \"node ./server/dev-server.js\" --manual",
    "deploy": "fly deploy --remote-only",
    "start": "cross-env NODE_ENV=production node .",
    "typecheck": "tsc",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "postinstall": "./scripts/postinstall.sh"
  },
  "dependencies": {
    "@conform-to/react": "^0.7.4",
    "@conform-to/zod": "^0.7.4",
    "@remix-run/css-bundle": "^1.19.1",
    "@remix-run/express": "^1.18.1",
    "@remix-run/node": "^1.19.1",
    "@remix-run/react": "^1.19.1",
    "@remix-run/serve": "^1.19.1",
    "address": "^1.2.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "close-with-grace": "^1.2.0",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "execa": "^7.1.1",
    "express": "^4.18.2",
    "get-port": "^7.0.0",
    "helmet": "^7.0.0",
    "isbot": "^3.6.8",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.6.0",
    "tailwind": "^4.0.0",
    "tailwind-merge": "^1.14.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.1",
    "@remix-run/eslint-config": "^1.19.1",
    "@total-typescript/ts-reset": "^0.4.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.4",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "autoprefixer": "^10.4.14",
    "cssnano": "^6.0.1",
    "esbuild": "^0.18.17",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.3",
    "node-html-parser": "^6.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "remix-flat-routes": "^0.5.10",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4"
